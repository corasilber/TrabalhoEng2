<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:text="Sistema de registro de contas de energia e/ou água" />

    <Button
        android:id="@+id/registrarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="170dp"
        android:layout_marginTop="130dp"
        android:text="Registrar Conta" />

    <Button
        android:id="@+id/exibirMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="170dp"
        android:text="Exibir Mês" />

    <Button
        android:id="@+id/exibirConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="170dp"
        android:text="Exibir Conta" />

    <Button
        android:id="@+id/gerarRelatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="170dp"
        android:text="Gerar Relatório" />

    <Button
        android:id="@+id/calculaVariacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="170dp"
        android:text="Calcular variação" />


</LinearLayout>